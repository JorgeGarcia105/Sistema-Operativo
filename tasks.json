{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Kernel",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-m32",
                "-c",
                "kernel.c",
                "-o",
                "kernel.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Link Kernel",
            "type": "shell",
            "command": "ld",
            "args": [
                "-m",
                "elf_i386",
                "-T",
                "linker.ld",
                "-o",
                "kernel.bin",
                "kernel.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
